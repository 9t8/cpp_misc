{
    "configurations": [
        {
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/**"
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "cStandard": "c99",
            "cppStandard": "c++11",
            "intelliSenseMode": "${default}",
            "compilerPath": "\"C:\\Users\\David\\Documents\\personal\\upp\\bin\\clang\\bin\\clang++.exe\"",
            "compilerArgs": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g", // ggdb3?
                "${fileDirname}/**.cpp",
                "-o",
                "${workspaceFolder}/a.exe",
                "-std=c++11",
                "-pedantic",
                "-D_GLIBCXX_DEBUG",
                "-I",
                "${fileDirname}/../include",
                "-Og",
                "-fsanitize=undefined",
                "-fsanitize-undefined-trap-on-error",
                "-ftrapv",
                "-Wall",
                "-Wextra",
                "-Wcast-align",
                "-Wcast-qual",
                "-Wctor-dtor-privacy",
                "-Wdisabled-optimization",
                "-Wformat=2",
                "-Winit-self",
                "-Wmissing-include-dirs",
                "-Wold-style-cast",
                "-Woverloaded-virtual",
                "-Wredundant-decls",
                "-Wshadow",
                "-Wsign-promo",
                "-Wstrict-overflow=4",
                "-Wundef",
                "-Winline",
                "-Wzero-as-null-pointer-constant",
                "-Wconversion",
                "-Wfloat-equal",
                "-Winvalid-pch"
            ]
        }
    ],
    "version": 4
}
